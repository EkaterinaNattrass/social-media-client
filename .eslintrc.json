{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["!lib/", "node_modules/"],
  "overrides": [
    {
        "files": [
            "src/**/*.test.js",
            "**/*.cy.js"
        ],
        "env": {
            "node": true,
            "jest": true,
            "cypress/globals": true
        },
        "plugins": [
            "jest",
            "cypress"
        ],
        "extends": [
            "plugin:jest/recommended",
            "plugin:cypress/recommended"
        ],
        "rules": {
            "jest/prefer-expect-assertions": "off",
            "no-unused-vars": "off"
        }
    }
]
}
