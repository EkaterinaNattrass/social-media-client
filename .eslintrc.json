{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": "node_modules/",
  "overrides": [
    {
      "files": "src/**/*.test.js",
      "env": {
        "node": true,
        "jest": true
      },
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "rules": {
        "jest/prefer-expect-assertions": "off"
      }
    },
    {
      "files": "**/*.cy.js",
      "env": {
        "node": true,
        "cypress/globals": true
      },
      "plugins": ["cypress"],
      "extends": ["plugin:cypress/recommended"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
